<phone:PhoneApplicationPage
    x:Class="HaruApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="480"
    d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"
    Orientation="Portrait"
    shell:SystemTray.IsVisible="True"
    Style="{StaticResource TurnstilePageTransition}"
    Loaded="PhoneApplicationPage_Loaded">

    <Grid Background="Transparent">
        <controls:Pivot x:Name="MainPivot"
                        Title="NO LOCATION"
                        SelectionChanged="MainPivot_SelectionChanged">
            <controls:PivotItem Header="right now">
                <Grid Margin="12,0,12,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Image x:Name="WeatherCodeImage"
                               Grid.Column="0"
                               toolkit:SlideInEffect.LineIndex="1"/>

                        <StackPanel Grid.Column="2">
                            <TextBlock x:Name="TemperatureTextBlock"
                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"
                                       toolkit:SlideInEffect.LineIndex="2"/>
                            <TextBlock x:Name="ApparentTemperatureTextBlock"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       toolkit:SlideInEffect.LineIndex="3"/>
                            <TextBlock x:Name="WeatherCodeTextBlock"
                                       Foreground="{StaticResource PhoneAccentBrush}"
                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeNormal}"
                                       toolkit:SlideInEffect.LineIndex="4"/>
                        </StackPanel>
                    </Grid>

                    <ScrollViewer x:Name="NowScrollViewer"
                                  Grid.Row="1"
                                  Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="24"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Row="0"
                                        Grid.Column="0"
                                        toolkit:SlideInEffect.LineIndex="5">
                                <TextBlock Text="Humidity"/>
                                <TextBlock x:Name="RelativeHumidityTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="0"
                                        Grid.Column="2"
                                        toolkit:SlideInEffect.LineIndex="5">
                                <TextBlock Text="Precipitation"/>
                                <TextBlock x:Name="PrecipitationTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Grid.Column="0"
                                        toolkit:SlideInEffect.LineIndex="6">
                                <TextBlock Text="Cloud cover"/>
                                <TextBlock x:Name="CloudCoverTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="1"
                                        Grid.Column="2"
                                        toolkit:SlideInEffect.LineIndex="6">
                                <TextBlock Text="Pressure"/>
                                <TextBlock x:Name="PressureTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2"
                                        Grid.Column="0"
                                        toolkit:SlideInEffect.LineIndex="7">
                                <TextBlock Text="Surface pressure"/>
                                <TextBlock x:Name="SurfacePressureTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="2"
                                        Grid.Column="2"
                                        toolkit:SlideInEffect.LineIndex="7">
                                <TextBlock Text="Wind speed"/>
                                <TextBlock x:Name="WindSpeedTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3"
                                        Grid.Column="0"
                                        toolkit:SlideInEffect.LineIndex="8">
                                <TextBlock Text="Wind direction"/>
                                <TextBlock x:Name="WindDirectionTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>

                            <StackPanel Grid.Row="3"
                                        Grid.Column="2"
                                        toolkit:SlideInEffect.LineIndex="8">
                                <TextBlock Text="Wind gusts"/>
                                <TextBlock x:Name="WindGustsTextBlock"
                                           FontSize="{StaticResource PhoneFontSizeLarge}"
                                           TextAlignment="Right"/>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </controls:PivotItem>

            <controls:PivotItem Header="next 12 hours">
                <ScrollViewer>
                    <ItemsControl x:Name="HourlyListBox"
                                  Margin="12,0,12,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,48">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                Background="{StaticResource PhoneAccentBrush}"
                                                toolkit:SlideInEffect.LineIndex="1">
                                        <TextBlock Margin="6,6,6,6"
                                                FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                FontSize="{StaticResource PhoneFontSizeSmall}"
                                                Foreground="White"
                                                Text="{Binding Time}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="{Binding Temperature2m}"
                                                   FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                   FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"
                                                   toolkit:SlideInEffect.LineIndex="2"/>
                                        <TextBlock Text="{Binding WeatherDescription}"
                                                   Foreground="{StaticResource PhoneAccentBrush}"
                                                   FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                   FontSize="{StaticResource PhoneFontSizeNormal}"
                                                   toolkit:SlideInEffect.LineIndex="3"/>
                                    </StackPanel>

                                    <Image Grid.Row="1"
                                           HorizontalAlignment="Right"
                                           Width="100"
                                           Height="100"
                                           Source="{Binding WeatherIcon}"
                                           toolkit:SlideInEffect.LineIndex="4"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:PivotItem>

            <controls:PivotItem Header="next 7 days">
                <ScrollViewer>
                    <ItemsControl x:Name="DailyListBox"
                                  Margin="12,0,12,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,48">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                Background="{StaticResource PhoneAccentBrush}"
                                                toolkit:SlideInEffect.LineIndex="1">
                                        <TextBlock Margin="6,6,6,6"
                                                FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                FontSize="{StaticResource PhoneFontSizeSmall}"
                                                Foreground="White"
                                                Text="{Binding Time}"/>
                                    </StackPanel>

                                    <StackPanel Grid.Row="1">
                                        <TextBlock Text="{Binding Temperature2mMax}"
                                                FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                FontSize="{StaticResource PhoneFontSizeExtraExtraLarge}"
                                                toolkit:SlideInEffect.LineIndex="2"/>
                                        <TextBlock Text="{Binding WeatherDescription}"
                                                Foreground="{StaticResource PhoneAccentBrush}"
                                                FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                FontSize="{StaticResource PhoneFontSizeNormal}"
                                                toolkit:SlideInEffect.LineIndex="3"/>
                                    </StackPanel>

                                    <Image Grid.Row="1"
                                           HorizontalAlignment="Right"
                                           Width="100"
                                           Height="100"
                                           Source="{Binding WeatherIcon}"
                                           toolkit:SlideInEffect.LineIndex="4"/>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:PivotItem>
        </controls:Pivot>

        <Canvas x:Name="GuideCanvas"
                Margin="0,646,0,0"
                Opacity="0.2"
                Visibility="Collapsed">
            <TextBlock Canvas.Left="220"
                       Canvas.Top="10"
                       FontFamily="Comic Sans MS"
                       Text="set your location here"/>
            <Image Height="50"
                   Width="50"
                   Canvas.Left="160"
                   Visibility="{StaticResource PhoneDarkThemeVisibility}"
                   Source="/Assets/guide.dark.png"/>
            <Image Height="50"
                   Width="50"
                   Canvas.Left="160"
                   Visibility="{StaticResource PhoneLightThemeVisibility}"
                   Source="/Assets/guide.light.png"/>
        </Canvas>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar>
            <shell:ApplicationBarIconButton x:Name="SearchApplicationBarIconButton"
                                            IconUri="/Assets/AppBar/appbar.feature.search.rest.png"
                                            Text="search"
                                            Click="SearchApplicationBarIconButton_Click"/>
            <shell:ApplicationBarIconButton x:Name="RefreshApplicationBarIconButton"
                                            IconUri="/Assets/AppBar/appbar.refresh.rest.png"
                                            Text="refresh"
                                            Click="RefreshApplicationBarIconButton_Click"/>

            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="SettingsApplicationBarMenuItem"
                                              Text="settings"
                                              Click="SettingsApplicationBarMenuItem_Click"/>
                <shell:ApplicationBarMenuItem x:Name="AboutApplicationBarMenuItem"
                                              Text="about"
                                              Click="AboutApplicationBarMenuItem_Click"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>