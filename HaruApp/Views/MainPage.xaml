<phone:PhoneApplicationPage
    x:Class="HaruApp.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:controls="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls"
    xmlns:toolkit="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone.Controls.Toolkit"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignWidth="480"
    d:DesignHeight="768"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait"
    Orientation="Portrait"
    shell:SystemTray.IsVisible="True"
    Style="{StaticResource TurnstilePageTransition}"
    Loaded="PhoneApplicationPage_Loaded">

    <Grid Background="Transparent">
        <controls:Pivot x:Name="MainPivot"
                        Title="NO LOCATION"
                        SelectionChanged="MainPivot_SelectionChanged">
            <controls:PivotItem Header="right now">
                <Grid x:Name="NowScrollViewer"
                      Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="24"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0"
                          Margin="12,0,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="36"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <Image Source="{Binding Current.WeatherIcon}"
                               Grid.Column="0"
                               Width="100"
                               Height="100"
                               toolkit:SlideInEffect.LineIndex="1"/>

                        <StackPanel Grid.Column="2"
                                    VerticalAlignment="Center"
                                    toolkit:SlideInEffect.LineIndex="2">
                            <TextBlock Margin="0,0,0,-8"
                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="CONDITION"/>
                            <TextBlock Text="{Binding Current.WeatherDescription}"
                                       Margin="0,0,0,0"
                                       FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                                       FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                                       Foreground="{StaticResource PhoneAccentBrush}"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2"
                          Margin="12,0,12,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="24"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel Grid.Row="0"
                                    Grid.Column="0"
                                    toolkit:SlideInEffect.LineIndex="3">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="TEMPERATURE"/>
                            <TextBlock Text="{Binding Current.Temperature}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="0"
                                    Grid.Column="2"
                                    toolkit:SlideInEffect.LineIndex="4">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="FEELS LIKE"/>
                            <TextBlock Text="{Binding Current.ApparentTemperature}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Grid.Column="0"
                                    toolkit:SlideInEffect.LineIndex="5">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="HUMIDITY"/>
                            <TextBlock Text="{Binding Current.Humidity}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="2"
                                    Grid.Column="2"
                                    toolkit:SlideInEffect.LineIndex="6">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="PRECIPITATION"/>
                            <TextBlock Text="{Binding Current.Precipitation}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4"
                                    Grid.Column="0"
                                    toolkit:SlideInEffect.LineIndex="7">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="WIND SPEED"/>
                            <TextBlock Text="{Binding Current.WindSpeed}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="4"
                                    Grid.Column="2"
                                    toolkit:SlideInEffect.LineIndex="8">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="WIND DIRECTION"/>
                            <TextBlock Text="{Binding Current.WindDirection}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="6"
                                    Grid.Column="0"
                                    toolkit:SlideInEffect.LineIndex="9">
                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Text="PRESSURE"/>
                            <TextBlock Text="{Binding Current.Pressure}"
                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                       FontSize="{StaticResource PhoneFontSizeLarge}"/>
                        </StackPanel>

                        <StackPanel Grid.Row="8"
                                    Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    toolkit:SlideInEffect.LineIndex="10">
                            <TextBlock Text="{Binding Current.Time, StringFormat='Forecast as of {0}'}"
                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                       Opacity="0.5"/>
                        </StackPanel>
                    </Grid>
                </Grid>
            </controls:PivotItem>

            <controls:PivotItem Header="next 12 hours">
                <ScrollViewer x:Name="HoursScrollViewer">
                    <ItemsControl ItemsSource="{Binding Hourly}"
                                  Margin="12,0,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,48">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                Background="{StaticResource PhoneAccentBrush}"
                                                toolkit:SlideInEffect.LineIndex="1">
                                        <TextBlock Margin="6,6,6,6"
                                                   FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                   FontSize="{StaticResource PhoneFontSizeSmall}"
                                                   Foreground="White"
                                                   Text="{Binding Time}"/>
                                    </StackPanel>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding WeatherIcon}"
                                               Grid.Column="0"
                                               Width="66"
                                               Height="66"
                                               VerticalAlignment="Center"
                                               toolkit:SlideInEffect.LineIndex="2"/>

                                        <StackPanel Grid.Column="2"
                                                    toolkit:SlideInEffect.LineIndex="3">
                                            <TextBlock Margin="0,0,0,-8"
                                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="CONDITION"/>
                                            <TextBlock Text="{Binding WeatherDescription}"
                                                       Margin="0,0,0,0"
                                                       FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                                                       FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                                                       Foreground="{StaticResource PhoneAccentBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="1.5*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    toolkit:SlideInEffect.LineIndex="4">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="TEMP"/>
                                            <TextBlock Text="{Binding Temperature}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2"
                                                    toolkit:SlideInEffect.LineIndex="5">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="HUM"/>
                                            <TextBlock Text="{Binding Humidity}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4"
                                                    toolkit:SlideInEffect.LineIndex="6">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="PREC"/>
                                            <TextBlock Text="{Binding Precipitation}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="6"
                                                    toolkit:SlideInEffect.LineIndex="7">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="WIND"/>
                                            <TextBlock Text="{Binding Wind}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:PivotItem>

            <controls:PivotItem Header="next 7 days">
                <ScrollViewer x:Name="DaysScrollViewer">
                    <ItemsControl ItemsSource="{Binding Daily}"
                                  Margin="12,0,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,48">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="12"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0"
                                                HorizontalAlignment="Left"
                                                Background="{StaticResource PhoneAccentBrush}"
                                                toolkit:SlideInEffect.LineIndex="1">
                                        <TextBlock Margin="6,6,6,6"
                                                   FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                   FontSize="{StaticResource PhoneFontSizeSmall}"
                                                   Foreground="White"
                                                   Text="{Binding Time}"/>
                                    </StackPanel>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="36"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Image Source="{Binding WeatherIcon}"
                                               Grid.Column="0"
                                               Width="66"
                                               Height="66"
                                               VerticalAlignment="Center"
                                               toolkit:SlideInEffect.LineIndex="2"/>

                                        <StackPanel Grid.Column="2"
                                                    toolkit:SlideInEffect.LineIndex="3">
                                            <TextBlock Margin="0,0,0,-8"
                                                       FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="CONDITION"/>
                                            <TextBlock Text="{Binding WeatherDescription}"
                                                       Margin="0,0,0,0"
                                                       FontFamily="{StaticResource PhoneFontFamilySemiLight}"
                                                       FontSize="{StaticResource PhoneFontSizeExtraLarge}"
                                                       Foreground="{StaticResource PhoneAccentBrush}"/>
                                        </StackPanel>
                                    </Grid>

                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="12"/>
                                            <ColumnDefinition Width="1.5*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0"
                                                    toolkit:SlideInEffect.LineIndex="4">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="TEMP"/>
                                            <TextBlock Text="{Binding Temperature}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2"
                                                    toolkit:SlideInEffect.LineIndex="5">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="AVG HUM"/>
                                            <TextBlock Text="{Binding Humidity}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="4"
                                                    toolkit:SlideInEffect.LineIndex="6">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="MAX PREC"/>
                                            <TextBlock Text="{Binding Precipitation}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>

                                        <StackPanel Grid.Column="6"
                                                    toolkit:SlideInEffect.LineIndex="7">
                                            <TextBlock FontFamily="{StaticResource PhoneFontFamilySemiBold}"
                                                       FontSize="{StaticResource PhoneFontSizeSmall}"
                                                       Foreground="{StaticResource PhoneSubtleBrush}"
                                                       Text="MAX WIND"/>
                                            <TextBlock Text="{Binding Wind}"
                                                       FontFamily="{StaticResource PhoneFontFamilyNormal}"
                                                       FontSize="{StaticResource PhoneFontSizeNormal}"/>
                                        </StackPanel>
                                    </Grid>
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </controls:PivotItem>
        </controls:Pivot>

        <Canvas x:Name="GuideCanvas"
                Margin="0,646,0,0"
                Opacity="0.2"
                Visibility="Collapsed">
            <TextBlock Canvas.Left="260"
                       Canvas.Top="10"
                       FontFamily="Comic Sans MS"
                       Text="set location here"/>
            <Image Height="50"
                   Width="50"
                   Canvas.Left="200"
                   Visibility="{StaticResource PhoneDarkThemeVisibility}"
                   Source="/Assets/guide.dark.png"/>
            <Image Height="50"
                   Width="50"
                   Canvas.Left="200"
                   Visibility="{StaticResource PhoneLightThemeVisibility}"
                   Source="/Assets/guide.light.png"/>
        </Canvas>
    </Grid>

    <phone:PhoneApplicationPage.ApplicationBar>
        <shell:ApplicationBar>
            <shell:ApplicationBarIconButton x:Name="SearchApplicationBarIconButton"
                                            IconUri="/Assets/AppBar/appbar.feature.search.rest.png"
                                            Text="search"
                                            Click="SearchApplicationBarIconButton_Click"/>
            <shell:ApplicationBarIconButton x:Name="RefreshApplicationBarIconButton"
                                            IconUri="/Assets/AppBar/appbar.refresh.rest.png"
                                            Text="refresh"
                                            Click="RefreshApplicationBarIconButton_Click"/>

            <shell:ApplicationBar.MenuItems>
                <shell:ApplicationBarMenuItem x:Name="SettingsApplicationBarMenuItem"
                                              Text="settings"
                                              Click="SettingsApplicationBarMenuItem_Click"/>
                <shell:ApplicationBarMenuItem x:Name="AboutApplicationBarMenuItem"
                                              Text="about"
                                              Click="AboutApplicationBarMenuItem_Click"/>
            </shell:ApplicationBar.MenuItems>
        </shell:ApplicationBar>
    </phone:PhoneApplicationPage.ApplicationBar>

</phone:PhoneApplicationPage>